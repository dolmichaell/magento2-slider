<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template" name="active_page" before="main.content"
                   template="Magento_Theme::active-life.phtml">
            </block>
        </referenceContainer>
        <referenceContainer name="main">
            <block class="Magento\Framework\View\Element\Template" name="slick_products" before="-"
                   template="Magento_Theme::slick-products.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
